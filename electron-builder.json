{
  "appId": "com.caja.grit",
  "productName": "CajaGrit",
  "directories": {
    "output": "dist"
  },
  "files": [
    "electron.js",
    "package.json",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "web-build",
      "to": "web-build",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "signAndEditExecutable": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "allowElevation": true,
    "perMachine": false,
    "differentialPackage": true,
    "deleteAppDataOnUninstall": false,
    "runAfterFinish": true,
    "include": "installer.nsh"
  },
  "publish": {
    "provider": "github",
    "owner": "Aronis-web",
    "repo": "caja-frontend-joanis",
    "private": false
  },
  "extraMetadata": {
    "main": "electron.js"
  }
}

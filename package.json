{
  "name": "CajaGrit",
  "private": true,
  "version": "0.0.5",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format:check",
    "electron": "cross-env NODE_ENV=development concurrently \"npm run web\" \"wait-on http://localhost:8081 && electron .\"",
    "electron:build": "expo export --platform web --output-dir web-build && node fix-html.js && electron-builder build --win --x64 && node copy-assets.js",
    "dist": "npm run electron:build",
    "publish": "npm run electron:build -- --publish always",
    "publish:draft": "npm run electron:build -- --publish onTagOrDraft"
  },
  "dependencies": {
    "@expo-google-fonts/baloo-2": "^0.4.2",
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "axios": "^1.6.0",
    "electron-updater": "^6.8.3",
    "expo": "~54.0.33",
    "expo-font": "~14.0.11",
    "expo-secure-store": "~15.0.8",
    "expo-status-bar": "~3.0.9",
    "mime-types": "^3.0.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-get-random-values": "~1.11.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "fs-extra": "^11.3.3",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.4"
  }
}
